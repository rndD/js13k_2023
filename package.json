{
  "name": "medieval-commerce",
  "version": "1.0.0",
  "main": "index.js",
  "devDependencies": {
    "@rollup/plugin-typescript": "8.5.0",
    "clean-css": "5.3.2",
    "copy-webpack-plugin": "9.0.1",
    "cross-env": "7.0.3",
    "ect-bin": "1.4.1",
    "html-minifier": "4.0.0",
    "html-webpack-plugin": "5.3.2",
    "npm-run-all": "4.1.5",
    "roadroller": "2.1.0",
    "ts-loader": "9.2.5",
    "ts-standard": "12.0.2",
    "typescript": "4.9.5",
    "vite": "4.4.9",
    "webpack": "5.88.2",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "4.15.1"
  },
  "ts-standard": {
    "ignore": [
      "find-best-roadroller.js",
      "next-env.d.ts",
      "old_src/**/*.ts",
      "tsconfig.json",
      "vite.config.ts"
    ],
    "project": "./tsconfig.eslint.json"
  },
  "scripts": {
    "serve": "npm-run-all --parallel tsc vite",
    "serve-dist": "python3 -m http.server --directory dist",
    "build": "cross-env LEVEL_2_BUILD=true vite build",
    "find-best-roadroller": "node find-best-roadroller.js",
    "build-with-best-roadroller": "cross-env USE_RR_CONFIG=true vite build",
    "lint": "ts-standard",
    "vite": "vite serve",
    "tsc": "tsc --watch --noEmit"
  }
}
